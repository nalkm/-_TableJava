<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>ownerBookList</title>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
function confirmStatus(uId) {
	var status = "1";
	var userId = uId;
	
	$.ajax({
        type: "POST",
        url: "bookList",
        data: { action: "status", status: status, userId : userId },
        success: function(response) {
            alert("예약 확정되었습니다.");
            $("#cancelBtn").hide();
        },
        error: function() {
            alert("예약 확정에 실패했습니다. 다시 시도해주세요.");
        }
    });
}
	
function cancelStatus(uId) {
    var status = "2";
    var userId = uId;
   
    $.ajax({
        type: "POST",
        url: "bookList",
        data: { action: "status", status: status, userId : userId },
        success: function(response) {
            alert("예약 취소되었습니다.");
            $("#statusBtn").prop(disabled, true);
        },
        error: function() {
            alert("예약 취소에 실패했습니다. 다시 시도해주세요.");
        }
    });
}

</script>
</head>
<body>
	<form method="post" action="bookList">
	<button type="submit" name="action" value="ownerBook"></button>
	
	<h1>예약 내역</h1>
	<ul>
		<c:forEach items="${bookList}" var="book">
			<div>
				<li>
					예약한 식당 : ${book.restaurant_name } <br>
					예약 날짜 : ${book.date } <br>
					예약 시간 : ${book.time } <br>
					예약 인원 수 : ${book.a_count + book.k_count } 명 <br>
					유모차 사용 : ${book.s_count } 개<br>
					휠체어 사용 : ${book.w_count } 개<br>
					요청 사항 : ${book.requirement } <br>
				</li>
				<div>
					예약 상태 : ${book.status }
				</div>
				<div>
					<button type="button" onclick="confirmStatus('${book.user_id}')">예약 확정</button>
				</div>
				<div>
					<button type="button" onclick="cancelStatus('${book.user_id}')">예약 취소</button>
				</div>
			</div>
		</c:forEach>
	</ul>
	</form>
</body>
</html>