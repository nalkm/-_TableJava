package dc.human.kimbanbagi.tableJava.dao;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;

import dc.human.kimbanbagi.tableJava.dto.*;


public class loginDAO {
	
	private Connection conn;
	public loginDAO() {
		try {
            Class.forName("oracle.jdbc.OracleDriver");

            conn = DriverManager.getConnection(
                    "jdbc:oracle:thin:@192.168.0.42:1521/xe",
                    "c##tableJava",
                    "tableJava"
            );

				} catch (Exception e) {
						e.printStackTrace();
				}
	}
	
	public RoleDTO match(UserDTO dto) {
		String id=dto.getId();
		String pwd=dto.getPwd();
		String job=null;
		int cnt;
		
		try {
			String sql = "SELECT COUNT(*) as cnt FROM users "+ "WHERE user_id='"+id+"' AND user_pwd='" + pwd+"'";
			
			PreparedStatement pstmt=conn.prepareStatement(sql);
			ResultSet rs=pstmt.executeQuery();
			
			while(rs.next()) {
				RoleDTO rdto=new RoleDTO();
				
				cnt=rs.getInt("cnt");
				
				// 로그인 정보 대조 성공
				if(cnt==1) {
					System.out.println("정보를 찾았습니다");
					job=findRole(id);
					rdto.setRole(job);
				
				// 로그인 정보 대조 실패
				}else {
					System.out.println("정보를 찾지못했습니다.");
				}
			}
		} catch (Exception e) {
			e.printStackTrace();
		} return rdto;
	}
	
	public String findRole(String id) {
		String job=null;
		try {
			String sql= "SELECT user_role FROM users "+ "WHERE user_id='"+id+"'";
			
			PreparedStatement pstmt=conn.prepareStatement(sql);
			ResultSet rs=pstmt.executeQuery();
			 while (rs.next()) {
				 job=rs.getString("user_role");
				 System.out.println(job);
				 
			 }
			
		} catch (Exception e) {
			e.printStackTrace();
		}
		System.out.println(job);
		 return job;
	}

}
